@model AppUser
<form class="form-signin" action="" method="post" name="form">
    <label for="fullname">Kullanıcı Adı</label>
    <input class="form-styling" type="text" name="username" placeholder="" asp-for="UserName" />

    <label for="password">Parola</label>
    <input class="form-styling" type="password" name="password" placeholder="" asp-for="PasswordHash" />
    <input type="checkbox" id="checkbox" />
    <label for="checkbox">
        <span class="ui">

        </span>Keep me signed in
    </label>
    <div class="btn-animate"><button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn btn-signin">Giriş Yap</button> </div>


</form>
